# %load clock.kv

# style =============================================================

<Label>:

    font_size: 60
    markup: True
    font_name: 'FZLTCXHJW.TTF'
<SwLabel@Label>:
    font_name: 'Roboto'

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    border: (2, 2, 2, 2)
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'

# style =============================================================

# body ==============================================================

BoxLayout:
    orientation: 'vertical'
    Label:
        id: time
        text: '[b]00[/b]:00:00'
    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop
            text: 'Start'
            on_press: app.start_stop() # 点击触发

        RobotoButton:
            text: 'Reset'
            background_down: 'button_normal.png'
            background_normal: 'button_down.png'
            on_press: app.reset() # 点击触发
    SwLabel:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'

# body ==============================================================